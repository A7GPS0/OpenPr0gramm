# EditorConfig is awesome:
# http://EditorConfig.org

root = true

[*]
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
end_of_line = lf

[*.cs]
indent_size = 4

[*.{md,json}]
indent_size = 4
indent_style = tab

[*.csproj]
indent_size = 2

[*.nuspec]
indent_size = 2
